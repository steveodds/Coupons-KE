@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h4 @*class="display-4"*@>Welcome To CouponsKE</h4>
</div>

<hr />

@if ((bool)ViewData["status"])
{
    <div class="text-center">
        <a class="btn btn-outline-primary" style="margin:15px" href="/UserCoupons">
            Saved Coupons <span class="badge badge-secondary">@Int32.Parse(ViewData["coupons"].ToString())</span>
        </a>
        <a class="btn btn-outline-info" style="margin:15px" href="/TrackedPrices">
            Saved Products <span class="badge badge-secondary">@Int32.Parse(ViewData["trackers"].ToString())</span>
        </a>
    </div>
}


<div class="container-fluid">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100 img-fluid" src="~/img/deals_coupons.png" style="max-width:450px" alt="Deals and coupons">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-black">Deals and Coupons</h5>
                    <p class="text-black">Find amazing discounts on our site or use coupons to bring your prices even lower.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/price_tracking.png" style="max-width:450px" alt="Price Tracking">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-black">Track Product Prices</h5>
                    <p class="text-black">Get notified whenever a product's price becomes low enough for it to be worth it.</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
@*Conn string: [@ViewData["conn"]]*@
@*Conn string: [@ViewData["main"]]*@
