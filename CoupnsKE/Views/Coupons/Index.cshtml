@model IEnumerable<CouponsKE.Models.Coupon>

@{
    ViewData["Title"] = "Index";
}

<h3>Latest Coupons</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="card">
    <div class="card-body">
        <div class="card-deck">

            @foreach (var item in Model)
            {
                <div class="card">
                    <img class="card-img-top" src="..." alt="@Html.DisplayFor(modelItem => item.Store) Coupon">
                    <div class="card-body">
                        <h4 class="card-title">@Html.DisplayFor(modelItem => item.Description)</h4>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Restrictions). Expires on: @Html.DisplayFor(modelItem => item.ExpiryDate). Type: @Html.DisplayFor(modelItem => item.CouponCategory) </p>
                        <a href="@Html.DisplayFor(modelItem => item.CouponUrl)" class="btn btn-primary" target="_blank"> USE &rarr;</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

